name:                project
version:             0.1.0.0
-- synopsis:
-- description:
homepage: https://github.com/RileyEv/project
bug-reports: https://github.com/RileyEv/project/issues
-- license:
license-file:        LICENSE
author:              Riley Evans
maintainer:          haskell@rly.rocks
-- copyright:
-- category:
build-type:          Simple
extra-source-files:  CHANGELOG.md, README.md


library
  exposed-modules:
      Pipeline
    , Pipeline.Circuit
    , Pipeline.DataStore
    , Pipeline.Network
    , Pipeline.Task
    , Pipeline.Nat
  other-modules:
      Pipeline.Internal.Core.DataStore
    , Pipeline.Internal.Core.CircuitAST
    , Pipeline.Internal.Core.Error
    , Pipeline.Internal.Core.PipeList
    , Pipeline.Internal.Core.UUID
    , Pipeline.Internal.Common.IFunctor
    , Pipeline.Internal.Common.IFunctor.Modular
    , Pipeline.Internal.Common.HList
    , Pipeline.Internal.Common.Nat
    , Pipeline.Internal.Common.TypeList
    , Pipeline.Internal.Backend.ProcessNetwork
    , Pipeline.Internal.Backend.Translation

  default-extensions:
      GADTs
    , FlexibleContexts
    , FlexibleInstances
    , KindSignatures
    , RankNTypes
    , TypeOperators
    , TypeApplications
    , DataKinds
    , PolyKinds
    , TypeFamilies
    , MultiParamTypeClasses
    , DeriveGeneric
    , DeriveAnyClass

  build-depends:
      base >=4 && <5
    , cassava
    , bytestring
    , vector
    , containers
    , mtl
    , uuid
    , filepath
    , transformers
    , either
    , lifted-base
    , deepseq
  hs-source-dirs: src
  default-language: Haskell2010

test-suite test
  default-language: Haskell2010
  type: exitcode-stdio-1.0
  hs-source-dirs: tests
  main-is: Test.hs
  build-depends:
      base >= 4 && < 5
    , tasty >= 1.4.1
    , tasty-hunit
    , containers
    , mtl
    , project
    , lifted-base
  other-modules:
      Pipeline.Network.Tests
    , Pipeline.Network.MinimalTests
    , Pipeline.Network.ErrorTests
  default-extensions:
      GADTs
    , DataKinds

